// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"

}

model User {
  id             Int       @id @default(autoincrement())
  login          String    @unique
  nickname       String
  password       String
  profilePicture String?
  level          String?
  description    String?

  posts          Post[]
  friends1       Friends[] @relation("FriendUser1")
  friends2       Friends[] @relation("FriendUser2")
  participants   Participants[]
}

model Friends {
  id         Int   @id @default(autoincrement())
  userId     Int
  friendId   Int
  createdAt  DateTime @default(now())

  user       User @relation("FriendUser1", fields: [userId], references: [id])
  friend     User @relation("FriendUser2", fields: [friendId], references: [id])
}

model Stadium {
  id         Int     @id @default(autoincrement())
  name       String
  latitude   Float
  longitude  Float
  link       String?

  posts      Post[]
}

model Post {
  id         Int          @id @default(autoincrement())
  userId     Int
  stadiumId  Int

  user       User        @relation(fields: [userId], references: [id])
  stadium    Stadium     @relation(fields: [stadiumId], references: [id])
  participants Participants[]
}

model Participants {
  id         Int    @id @default(autoincrement())
  postId     Int
  participantId Int

  post       Post @relation(fields: [postId], references: [id])
  user       User @relation(fields: [participantId], references: [id])
}
